@model EIHTestPortal.Models.UserProfile

@{
    ViewBag.Title = "Login";
    Html.EnableClientValidation(true);
}


<head>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="~/Scripts/AppJsAndCSS/css/SignIn.css" rel="stylesheet">

</head>

<body class="text-center">

    <main class="form-signin">

        @using (Html.BeginForm("Login", "Authenticate", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
            
            @Html.TextBoxFor(a => a.EmailId, new { placeholder = "Enter Email address here", @class = "form-control" })
            @Html.ValidationMessageFor(a => a.EmailId, "", new { @class = "text-danger" })
            <br />
            
            @Html.PasswordFor(a => a.Password, new { placeholder = "Enter Password here", @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            <br />
            <br />
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        }
    </main>
</body>
