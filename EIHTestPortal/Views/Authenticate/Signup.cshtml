@model EIHTestPortal.Models.SignupUser

@{
    ViewBag.Title = "Register";
    Html.EnableClientValidation(true);
}


<head>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>


    <!-- Custom styles for this template -->
    <link href="~/Scripts/AppJsAndCSS/css/SignIn.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.js" type="text/javascript"></script>


</head>

<body class="text-center">

    <main class="form-signin">

        @using (Html.BeginForm("Register", "Authenticate", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h1 class="h3 mb-3 fw-normal">Register</h1>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.TextBoxFor(a => a.EmailId, new { placeholder = "Enter Email address here", @class = "form-control" })
            @Html.ValidationMessageFor(a => a.EmailId, "", new { @class = "text-danger" })
            <br />

            @Html.PasswordFor(a => a.Password, new { placeholder = "Enter Password here", @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
            <br />

            @Html.PasswordFor(a => a.ConfirmPassword, new { placeholder = "Confirm Password here", @class = "form-control" })
            @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text-danger" })
            <br />
            <br />
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
        }
    </main>
</body>

<script>

    $('#EmailId').click(function (e) {
        console.log("email id ");
        $('.validation-summary-errors').remove();
    });
    $.fn.clearErrors = function () {
        console.log("dgdf");
        $(this).each(function () {
            $(this).find(".validation-summary-errors").empty();
            $(this).trigger('reset.unobtrusiveValidation');
        });
    };

</script>